{
    "name": "telegram-coffee-bot",
    "version": "1.1.1",
    "description": "Telegram bot for coffee capsules calculation",
    "main": "index.mjs",
    "type": "module",
    "scripts": {
        "build": "rimraf ./dist && tsc",
        "start": "cross-env NODE_ENV=production BOT_MODE=server node dist/index.mjs",
        "start:dev": "cross-env NODE_ENV=development BOT_MODE=server node --inspect dist/index.mjs | bunyan",
        "start:gcloud": "functions-framework --target=bot --source=dist/index.mjs",
        "start:gcloud:dev": "cross-env NODE_ENV=development npm run start:gcloud",
        "start:gcloud:prod": "cross-env NODE_ENV=production npm run start:gcloud",
        "prettier:check": "prettier . --check",
        "prettier:write": "prettier . --write",
        "lint:check": "eslint ./src --ext .mts",
        "lint:format": "eslint ./src --ext .mts --fix",
        "build:ts": "tsc --noEmit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dkhovrich/telegram-coffee-bot.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/dkhovrich/telegram-coffee-bot/issues"
    },
    "homepage": "https://github.com/dkhovrich/telegram-coffee-bot#readme",
    "devDependencies": {
        "@types/bunyan": "^1.8.8",
        "@types/config": "^3.3.0",
        "@types/node": "^20.4.1",
        "@types/uuid": "^9.0.2",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "eslint": "^8.44.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^16.0.1",
        "eslint-plugin-promise": "^6.1.1",
        "prettier": "3.0.0",
        "rimraf": "^5.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "@google-cloud/functions-framework": "^3.3.0",
        "brandi": "^5.0.0",
        "bunyan": "^1.8.15",
        "config": "^3.3.9",
        "cross-env": "^7.0.3",
        "firebase-admin": "^11.9.0",
        "i18next": "^23.2.11",
        "mysql2": "^3.5.1",
        "telegraf": "^4.12.2",
        "telegraf-session-local": "^2.1.1",
        "uuid": "^9.0.0",
        "zod": "^3.21.4"
    }
}
